.chat-container, .chat-bg {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #ffe48c 0%, #ffcaed 100%);
  overflow: hidden;
}

.chat-list {
  flex: 1;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}

.chat-bubble {
  max-width: 80%;
  padding: 20rpx;
  margin: 10rpx 0;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-word;
}

.chat-bubble.user {
  background-color: #dcf8c6;
  align-self: flex-end;
  text-align: right;
}

.chat-bubble.ai {
  background-color: #fff;
  align-self: flex-start;
  text-align: left;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.bubble-text {
  color: #333;
}

.chat-input-bar {
  display: flex;
  align-items: center;
  padding: 5rpx 10rpx 24rpx 10rpx;
  background: transparent;
  box-sizing: border-box;
  box-shadow: none;
  border-top: none;
}

.chat-bar-input {
  flex: 1;
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  border: none;
  font-size: 28rpx;
  padding: 0 28rpx;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  color: #333;
}

.chat-bar-send {
  min-width: 0;
  width: 140rpx;
  height: 80rpx;
  font-size: 50rpx;
  background: linear-gradient(90deg, #FFC94D 0%, #FF5B99 100%);
  color: #fff;
  border: none;
  border-radius: 38rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(255,201,77,0.08);
  padding: 0;
  margin-left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.chat-bar-send:active {
  background: linear-gradient(90deg, #FF5B99 0%, #FFC94D 100%);
}

.yellow-ellipse-text {
  color: #4A3200;
  font-size: 28rpx;
  font-weight: bold;
}
.chat-row {
  display: flex;
  align-items: flex-start;
  margin: 10rpx 0;
}

.chat-row.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 12rpx;
}

.ai-avatar,
.chat-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 0 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  flex-shrink: 0;
}
 