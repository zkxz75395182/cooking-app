/* pages/community/community.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
  margin: 24rpx;
}
.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.search-input {
  flex: 1;
  font-size: 28rpx;
}

/* 帖子列表 */
.post-list {
  flex: 1; /* 佔滿剩餘空間 */
  padding: 0 24rpx;
  height: 0; /* scroll-view 在 flex 佈局下需要此屬性 */
}

.post-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #eee;
}
.author-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.post-content .post-text {
  display: block;
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}
.post-content .post-image {
  width: 100%;
  border-radius: 16rpx;
  margin-top: 20rpx;
  background-color: #eee;
}

.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
.action-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #888;
}
.action-button .action-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 分享按鈕 */
.share-button {
  position: fixed;
  bottom: 160rpx; /* 根據實際 tabbar 高度微調 */
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 60rpx;
  border-radius: 48rpx;
  background-image: linear-gradient(to right, #FFD15C, #FFC02A);
  color: #5C4B2E;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(255, 204, 77, 0.4);
  z-index: 10;
}
.share-button .share-icon {
  width: 40rpx;
  height: 40rpx;
}