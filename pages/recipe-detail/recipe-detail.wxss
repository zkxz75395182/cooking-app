/* 菜譜頭部 */
.recipe-header {
  position: relative;
  height: 400rpx;
  margin: -20rpx -20rpx 30rpx -20rpx;
}

.recipe-image {
  width: 100%;
  height: 100%;
  background: #F0F0F0;
}

.recipe-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 40rpx 30rpx 30rpx;
  color: #FFFFFF;
}

.recipe-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 基本信息 */
.info-section {
  margin-bottom: 30rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.info-item {
  text-align: center;
  padding: 20rpx;
}

.info-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

/* 營養成分 */
.nutrition-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.per-serving {
  font-size: 24rpx;
  color: #999999;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.nutrition-label {
  color: #666666;
  font-size: 28rpx;
}

.nutrition-value {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
}

/* 食材 */
.ingredients-section {
  margin-bottom: 30rpx;
}

.ingredients-list {
  padding: 20rpx 0;
}

.ingredient-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF6B9D;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.ingredient-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

/* 製作步驟 */
.steps-section {
  margin-bottom: 30rpx;
}

.steps-list {
  padding: 20rpx 0;
}

.step-item {
  display: flex;
  margin-bottom: 30rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #FF6B9D, #FFB3D1);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  padding-top: 8rpx;
}

.step-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 小貼士 */
.tips-section {
  margin-bottom: 30rpx;
}

.tips-content {
  padding: 20rpx;
  background: #FFF8F9;
  border-radius: 12rpx;
  border-left: 6rpx solid #FF6B9D;
}

.tips-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 操作按鈕 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-buttons button {
  flex: 1;
}

/* 相關推薦 */
.related-section {
  margin-bottom: 30rpx;
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.related-item {
  background: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.related-item:active {
  transform: scale(0.95);
}

.related-image {
  width: 100%;
  height: 120rpx;
  background: #F0F0F0;
}

.related-name {
  font-size: 24rpx;
  color: #333333;
  padding: 12rpx;
  display: block;
  text-align: center;
}

/* 動畫效果 */
.fade-in {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 響應式設計 */
@media (max-width: 750rpx) {
  .recipe-title {
    font-size: 40rpx;
  }
  
  .info-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .nutrition-grid {
    grid-template-columns: 1fr;
  }
  
  .related-grid {
    grid-template-columns: 1fr;
  }
} 