/* 全局樣式 */
page {
  background-color: #FFF5F7;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  color: #333333;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 卡片樣式 */
.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B9D, #FFB3D1);
}

/* 按鈕樣式 */
.btn-primary {
  background: linear-gradient(135deg, #FF6B9D, #FF8FB1);
  color: #FFFFFF;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 157, 0.4);
}

.btn-secondary {
  background: #F8F9FA;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
  border-radius: 50rpx;
  padding: 18rpx 38rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 標題樣式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 標籤樣式 */
.tag {
  display: inline-block;
  background: #FFE6F0;
  color: #FF6B9D;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* 營養信息樣式 */
.nutrition-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.nutrition-item:last-child {
  border-bottom: none;
}

.nutrition-label {
  color: #666666;
  font-size: 28rpx;
}

.nutrition-value {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
}

/* 動畫效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.6s ease-out;
}

/* 可愛圖標樣式 */
.cute-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFB3D1, #FF6B9D);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
}

/* 進度條樣式 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #F0F0F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B9D, #FFB3D1);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 響應式設計 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 32rpx;
  }
} 